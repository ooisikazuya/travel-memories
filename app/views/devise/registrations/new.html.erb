<div class="container">
  <h1 class="bg-warning text-white text-center">会員登録</h1>
</div><br>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <div class="container">
    <%= render "devise/shared/error_messages", resource: resource %>
  </div>
  <div class="container">
    <div class="row">      
      <div class="col-5">
        <div class="field">
          <%= f.label :ニックネーム, class: "text-info" %><br />
          <%= f.text_field :nickname, class:"form-control border-info", autofocus: true %>
        </div>
      </div>
    </div>
  </div><br>
  <div class="container">
    <div class="row">      
      <div class="col-5">
        <div class="field">
          <%= f.label :メールアドレス, class: "text-info" %><br />
          <%= f.email_field :email, class:"form-control border-info", autocomplete: "email" %>
        </div>
      </div>
    </div>
  </div><br>
  <div class="container">
    <div class="row">      
      <div class="col-7">  
        <div class="field text-info">
          <%= f.label :パスワード %>
          <% if @minimum_password_length %>
            <lavel>(<%= @minimum_password_length %>文字以上)</lavel>
          <% end %><br />
          <%= f.password_field :password, class:"form-control border-info", autocomplete: "new-password" %>
        </div>
      </div>
    </div>
  </div><br>
  <div class="container">
    <div class="row">      
      <div class="col-7"> 
        <div class="field">
          <%= f.label :もう1度パスワードを入力してください, class: "text-info" %><br />
          <%= f.password_field :password_confirmation, class:"form-control border-info", autocomplete: "new-password" %>
        </div>
      </div>
    </div>
  </div><br><br>
  <div class="container">
    <div class="row">
      <div class="col-7">
        <div class="actions">
          <%= f.submit "登録", class: "btn btn-success btn-lg float-right" %>
        </div>
      </div>
    </div>
  </div>  
<% end %>
<br><br><br><br><br>