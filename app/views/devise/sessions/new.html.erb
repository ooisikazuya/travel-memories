<div class="container">
  <h1 class="bg-warning text-white text-center">ログイン</h1>
</div><br>
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="container">
    <div class="row">      
      <div class="col-7">  
        <div class="field">
          <%= f.label :メールアドレス, class: "text-info" %><br />
          <%= f.email_field :email, class:"form-control border-info", autofocus: true, autocomplete: "email" %>
        </div>
      </div>
    </div>
  </div><br>
  <div class="container">
    <div class="row">      
      <div class="col-7">   
        <div class="field">
          <%= f.label :パスワード, class: "text-info" %><br />
          <%= f.password_field :password, class:"form-control border-info", autocomplete: "current-password" %>
        </div>
      </div>
    </div>
  </div><br><br>
  <div class="container">
    <div class="col-7">
      <div class="actions">
        <%= f.submit "ログイン", class: "btn btn-success btn-lg float-right" %>
      </div>
    </div>
  </div> 
<% end %>