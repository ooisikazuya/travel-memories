<div class="container">
  <h1 class="bg-warning text-white text-center">会員情報</h1>
</div><br>
<div class="container">
  <h2 class="text-info">ニックネーム</h2>
  <h3><%= @user.nickname %><h3>         
</div><br>
<div class="container">
  <h2 class="text-info">メールアドレス</h2>
  <h3><%= @user.email %><h3>
</div><br>
<% if @user.image? %>
  <p>
    <strong>Image:</strong>
    <%= image_tag @user.image.url %>
  </p>
<% end %>
<div class="container">
  <div class="row">
    <div class="col-5">
      <%= link_to '登録情報の変更', edit_user_path, class: "btn btn-success btn-lg float-right" %>
    </div>
  </div>
</div><br>