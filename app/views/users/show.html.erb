<div class="container">
  <% if flash[:notice] %>
    <h2 class="flash bg-primary text-white text-center">
      <%= flash[:notice] %>
    </h2>
  <% end %>
</div>
<div class="container">
  <h1 class="bg-warning text-white text-center">会員情報</h1>
</div><br>
<div class="container">
  <h2 class="text-info">ニックネーム</h2>
  <h3><%= @user.nickname %><h3>         
</div><br>
<div class="container">
  <h2 class="text-info">メールアドレス<i class="far fa-envelope fa-fw"></i></h2>
  <h3><%= @user.email %><h3>
</div><br>
<div class="container">
  <h2 class="text-info">プロフィール画像<i class="fas fa-image fa-fw"></i></h2>
  <% if @user.image? %>
    <p>
      <%= image_tag @user.image.url %>
    </p>
  <% else %>
    <h5 class="text-primary">選択されていません</h5>
  <% end %>
</div><br>
<div class="container">
  <div class="row">
    <div class="col-7">
      <%= link_to '登録情報の変更', edit_user_path, class: "btn btn-info btn-lg float-right" %>
    </div>
  </div>
</div><br><br><br>